<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:System="clr-namespace:System;assembly=System.Runtime"
        xmlns:BO="clr-namespace:IBL.BO;assembly=BL" x:Class="PL.DroneWindow"
        mc:Ignorable="d"
        Title="DroneWindow" Height="600" Width="600" Closing="Window_Closing">
    <Grid x:Name="AddGrid" Margin="0,42,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="139*"/>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="150*"/>
        </Grid.ColumnDefinitions>
        <Label Content="&#x9;       Drone ID:" />
        <TextBox Name="ID" Margin="70,15,70,2" Text="{Binding Id}" Grid.ColumnSpan="2" Grid.Column="2"/>
        <Label Content="&#x9;    Drone Model:" Grid.Row="1"/>
        <TextBox Name="Model" Margin="70,15,70,2" Grid.Column="2" Text ="{Binding Model}" Grid.ColumnSpan="2" Grid.Row="1"/>
        <Label Content="&#x9;     Max Weight:" Grid.Row="2"/>
        <ComboBox x:Name="WeightSelector" Grid.Column="2" Margin="70,15,70,2" SelectedItem="{Binding MaxWeight}" Grid.ColumnSpan="2" Grid.Row="2"/>
        <Label Content="                  Initial Station:" Grid.Row="3"/>
        <ComboBox x:Name="StationSelector" Grid.Column="2" Margin="70,15,70,2" 
                      	DisplayMemberPath="Name" SelectedValue="Id" Grid.Row="3" Grid.ColumnSpan="2"/>
        <!--need to select id (stationtolist has no location) and convert to location for drone-->

        <Button Content="Cancel" HorizontalAlignment="Left" Margin="140,4,0,0" Grid.Row="2" VerticalAlignment="Top" Height="34" Width="150" FontSize="20" Click="Cancel_Click" Grid.Column="3" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="140,6,0,0" Grid.Row="1" VerticalAlignment="Top" Height="34" Width="150" FontSize="20" Click="Add_Click" Grid.Column="3" Grid.ColumnSpan="2" />
        <Label Content="Enter Drone details" HorizontalAlignment="Left" Margin="59,-48,0,0" VerticalAlignment="Top" FontSize="25" Grid.ColumnSpan="2" Grid.Column="2"/>
    </Grid>
</Window>
