<Window x:Class="PL.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="InputWindow" Height="200" Width="300">
    <Grid>
        <Label Content="Please Enter Number of Hours Charging" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name ="Hours" HorizontalAlignment="Center" Margin="0,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" Height="31"/>
        <Button Content="Release " HorizontalAlignment="Center" Margin="0,121,0,0" VerticalAlignment="Top" Height="25" Width="90" Click="Release"/>

    </Grid>
</Window>
