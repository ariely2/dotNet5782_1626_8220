<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:System="clr-namespace:System;assembly=System.Runtime" xmlns:BO="clr-namespace:IBL.BO;assembly=BL" x:Class="PL.DroneListWindow"
        mc:Ignorable="d"
        Title="DroneListWindow" SizeToContent="WidthAndHeight" Closing="Window_Closing" Activated="Window_Activated" Width="auto" Height="auto">
    <Grid x:Name="MainGrid" Width="456">
        <Grid x:Name ="UpGrid" Height="auto" Grid.Row="0" Width="auto" Grid.ColumnSpan="2" Background="DarkSlateGray" Margin="-195,0,0,437" Grid.RowSpan="2">
            <Label Content="Filter Drone list:" FontSize="27" Margin="10,66,354,0" VerticalContentAlignment="Center" Foreground="MistyRose" HorizontalContentAlignment="Center"/>
            <Label Content="Status" Foreground="MistyRose" Margin="263,92,200,48" FontSize="26" HorizontalContentAlignment="Center"/>
            <ComboBox x:Name="StatusSelector" SelectionChanged ="Selected_Filter" Margin="263,139,193,0" Width="195" />
            <Label Content="Max Weight" Margin="456,89,0,51" Foreground="MistyRose" FontSize="26" HorizontalContentAlignment="Center"/>
            <ComboBox x:Name="WeightSelector" SelectionChanged ="Selected_Filter" Margin="456,138,0,0" Width="195"/>
            <Border BorderThickness="4" BorderBrush="SlateGray" Grid.ColumnSpan="4" Margin="0,66,0,0"/>
            <Label Content="Drone List" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Grid.Column="1" Grid.ColumnSpan="2" Height="61" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="42" Foreground="MistyRose"/>
        </Grid>

        <ListView x:Name="DronesListView" MouseDoubleClick="DroneDoubleClick" Margin="-195,185,0,61">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid x:Name ="DownGrid" Grid.Row="0" Margin="-195,554,0,0" Background="DarkSlateGray" Grid.ColumnSpan="2" Width="auto" Height="auto">
            <Button Content="Add Drone" Click ="AddDrone" Height="65" Width="213" RenderTransformOrigin="0.643,-0.085" FontSize="35" Margin="438,3,0,0"/>
            <Button Content="Close" Click ="Close" Height="65" Width="213" RenderTransformOrigin="0.643,-0.085" FontSize="35" Margin="0,3,438,0" />
        </Grid>
    </Grid>
</Window>
