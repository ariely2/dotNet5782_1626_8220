<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:System="clr-namespace:System;assembly=System.Runtime" xmlns:BO="clr-namespace:IBL.BO;assembly=BL" x:Class="PL.DroneListWindow"
        mc:Ignorable="d"
        Title="DroneListWindow" Height="640" Width="800" Closing="Window_Closing" Activated="Window_Activated">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="361*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="400*"/>
        </Grid.RowDefinitions>
        <Grid x:Name ="UpGrid" Height="auto" Grid.Row="0" Width="auto" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="        Filter Drone list: " Grid.Column="1" FontSize="20" HorizontalAlignment="Center" Width="200" Margin="0,-7,0,6"/>
            <Label Content="&#x9;         Status" Grid.Column="2"/>
            <ComboBox x:Name="StatusSelector" Grid.Column="2" SelectionChanged ="Selected_Filter" Margin="0,20,0,0" />
            <Label Content="&#x9;     Max Weight" Grid.Column="3"/>
            <ComboBox x:Name="WeightSelector" Grid.Column="3" SelectionChanged ="Selected_Filter" Margin="0,20,0,0"/>
            <Button Content="Close" HorizontalAlignment="Left" VerticalAlignment="Top" Click ="Close" Height="30" Width="190" RenderTransformOrigin="0.643,-0.085"/>
            <Button Content="Add Drone" HorizontalAlignment="Left" VerticalAlignment="Top" Click ="AddDrone" Height="30" Width="190" RenderTransformOrigin="0.643,-0.085" Margin="0,39,0,0"/>
        </Grid>


        <ListView x:Name="DronesListView" MouseDoubleClick="DroneDoubleClick" Grid.ColumnSpan="2" Margin="0,69,400,0" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>
